#include <iostream>

using namespace std;



int main()
{
int num1;
int num2;
char op;
int answer;

cout << "Enter first number:";
cin >> num1;
cout << "Enter action:";
cin >> op;
cout << "Enter second number:";
cin >> num2;

 if (op == '+'){

    answer= num1+num2;
}
  else if (op == '-'){

    answer = num1- num2;
}
  else if (op =='/'){
    answer = num1/num2;

}
  else if (op == '*'){

    answer = num1 * num2;
 }

   else {
    cout << "Invalid operation";
}

     cout << answer;







    return 0;
}
